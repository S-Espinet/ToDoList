@{
  Layout = "_Layout";
}

@model ToDoList.Models.Item

<h4>Add a new task</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description, new { required = "required"})
  <br />
  @Html.LabelFor(model => model.DueDate)
  @Html.TextBoxFor(model => model.DueDate, new { type = "date" })
  <br />
  @Html.Label("Select category")
  @Html.DropDownList("CategoryId")
  <input type="submit" value="Add new task" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all items", "Index")</p>